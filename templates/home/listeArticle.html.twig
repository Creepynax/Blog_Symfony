<div class="container mt-4">
    <h1>Liste des Articles</h1>

    <div class="text-right mb-3">
        {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('article_new') }}" class="btn btn-success">Créer un article</a>
        {% else %}
            <a href="{{ path('app_register') }}" class="btn btn-success">Créer un article</a>
        {% endif %}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Résumé</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in pagination %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.summary|slice(0, 140) ~ '(...)' }}</td>
                <td>
                    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('article_update', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
                    {% else %}
                        <a href="{{ path('app_register') }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('app_register') }}" class="btn btn-warning">Modifier</a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <form action="{{ path('article_delete', {'id': article.id}) }}" method="post" style="display: inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>