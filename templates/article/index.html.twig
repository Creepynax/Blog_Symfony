{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">{{ article.title }}</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ article.summary }}</h5>
            <p class="card-text">{{ article.content }}</p>
{% if article.image is not empty %}
    <img src="{{ article.image }}" alt="{{ article.title }}" class="img-thumbnail img-sm">
{% endif %}
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('article_index') }}" class="btn btn-primary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
