{% extends 'base.html.twig' %}

{% block title %}Modifier le Tag{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier le Tag</h1>
    
    {{ form_start(form) }}
    
    <div class="form-group">
        {{ form_label(form.name, 'Nom du Tag', {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Mettre à jour</button>
    </div>
    
    {{ form_end(form) }}
    
    <a href="{{ path('tag_index') }}" class="btn btn-secondary mt-3">Retour à la liste des Tags</a>
</div>
{% endblock %}
